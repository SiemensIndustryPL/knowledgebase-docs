{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "/**/*.{md,yml}"
        ],
        "src": "articles",
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**"
        ],
        "src": "articles"
      },
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/siemens"
    ],
    "globalMetadata": {
      "_appName": "",
      "_appTitle": "docfx-demo",
      "_enableSearch": true,
      "pdf": true,
      "_appLogoPath": "images/sie-logo-white-rgb.svg",
      "_appFaviconPath": "images/favicon.ico"
    }
  }
}